{
    "variables": {
        "hostname": null,
        "domain": null,
        "fullname": null,
        "user": null,
        "password": null,
        "disk_size": "32000",
        "memory": "32768",
        "ncpu": "8",
        "interface": "ens3",
        "images_dir": "/export/vm"
    },

    "builders":
    [
        {
            "vm_name": "{{ user `hostname` }}.qcow2",
            "type": "qemu",
            "accelerator": "kvm",
            "output_directory": "{{ user `images_dir` }}/{{ user `hostname` }}",
            "qemu_binary": "/usr/libexec/qemu-kvm",
            "qemuargs": [ [ "-smp" , "{{ user `ncpu` }}" ], ["-m", "{{user `memory`}}M"] ],
            "format": "raw",
            "disk_size": "{{ user `disk_size`}}",
            "net_device": "virtio-net-pci",
            "machine_type": "pc",
            "skip_compaction": true,

            "iso_url": "http://nl3.releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
            "iso_checksum": "23e97cd5d4145d4105fbf29878534049",
            "iso_checksum_type": "md5",

            "http_directory": "http",

            "ssh_disable_agent": false,
            "ssh_file_transfer_method": "scp",
            "ssh_handshake_attempts": 10,
            "ssh_host_port_max": 4444,
            "ssh_host_port_min": 2222,
            "ssh_password": "{{user `password`}}",
            "ssh_port": 22,
            "ssh_pty": false,
            "ssh_timeout": "60m",
            "ssh_username": "{{user `user`}}",

            "shutdown_command": "echo '{{user `password`}}' | sudo -E -S poweroff",
            "shutdown_timeout": "5m",

            "boot_wait": "2s",
            "boot_command": [
              "<enter>",
              "<f6><esc>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "initrd=/install/initrd.gz ",
              "auto=true ",
              "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
              "language=en ",
              "country=US ",
              "locale=en_US.UTF-8 ",
              "hostname={{user `hostname`}} ",
              "domain={{user `domain`}} ",
              "console-setup/ask_detect=false ",
              "keyboard-configuration/layoutcode=us ",
              "passwd/user-fullname=\"{{user `fullname`}}\" ",
              "passwd/username=\"{{user `user`}}\" ",
              "passwd/user-password=\"{{user `password`}}\" ",
              "passwd/user-password-again=\"{{user `password`}}\" ",
              "vga=788 noprompt quiet --<enter>"
            ]
        }
    ],

    "provisioners": [
      {
        "type": "file",
        "source": "interfaces",
        "destination": "/tmp/interfaces"
      },
      {
        "type": "file",
        "source": "purge-unneeded-kernels.sh",
        "destination": "/tmp/purge-unneeded-kernels.sh"
      },
      {
        "type": "shell",
        "execute_command": "echo '{{user `password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
        "skip_clean": true,
        "remote_path": "/tmp/adduser.sh",
        "inline": [
          "#!/bin/bash -x",
          "sleep 10",
          "cp /tmp/purge-unneeded-kernels.sh /root/purge-unneeded-kernels.sh",
          "chown root:root /root/purge-unneeded-kernels.sh",
          "chmod 0755 /root/purge-unneeded-kernels.sh",
          "(crontab -l 2>/dev/null; echo \"@reboot /root/purge-unneeded-kernels.sh\") | crontab -"
          "cp /tmp/interfaces /etc/network/interfaces",
          "chmod u=rw,g=r,o=r /etc/network/interfaces",
          "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers"
        ]
      }
    ],

    "post-processors": [
      {
        "type": "shell-local",
        "only": ["qemu"],
        "inline": [
          "chmod -R a+rw {{ user `images_dir` }}/{{ user `hostname` }}",
          "virt-install --import -n {{ user `hostname` }} -r {{ user `memory` }} --vcpus {{ user `ncpu` }} --disk path={{ user `images_dir` }}/{{ user `hostname` }}/{{ user `hostname` }}.qcow2,device=disk,bus=virtio --network network=default --network bridge=ext0 --network bridge=rep0"
        ]
      }
    ]
}
